{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Default permissions for the application",
  "platforms": ["linux", "macOS", "windows"],
  "permissions": [
    "core:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "dialog:allow-confirm",
    "opener:default",
    "opener:allow-open-url"
  ],
  "windows": ["*"]
}
