{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "lite",
	"version": "0.1.0",
	"identifier": "com.lite.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Lite",
				"width": 800,
				"height": 600,
				"devtools": true
			}
		],
		"security": {
			"csp": null,
			"capabilities": ["default"]
		},
		"withGlobalTauri": true
	},
	"plugins": {
		"sql": {
			"preload": ["sqlite:main.db"],
			"scope": {
				"allowed": [
					{
						"database": "sqlite:main.db",
						"execute": true,
						"select": true
					}
				]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
			"../src/lib/server/db/*.sql"
		]
	}
}
